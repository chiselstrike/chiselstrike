{
    "fmt": {
        "files": {
            "include": ["cli", "server", "compile", "api", "deno.json"],
            "exclude": [
                "api/src/dts",
                "cli/examples",
                "cli/docs",
                "compile/src/lib",
                "compile/src/typescript.js",
                "server/docs"
            ]
        },
        "options": {
            "indentWidth": 4
        }
    },
    "lint": {
        "files": {
            "include": ["cli", "server", "api", "compile"],
            "exclude": [
                "cli/examples",
                "compile/src/lib",
                "compile/src/typescript.js"
            ]
        },
        "rules": {
            "tags": ["recommended"]
        }
    }
}
