# RUN: sh -e @file

cp examples/person.ts "$TEMPDIR/models"
cp examples/store.ts "$TEMPDIR/endpoints"
cat << EOF > "$TEMPDIR/policies/pol.yaml"
labels:
  - name: pii
    transform: anonymize
EOF

cat << EOF > "$TEMPDIR/endpoints/query.ts"
import { Person } from "../models/person.ts";

export default async function chisel(req: Request) {
    let ret = "[";
    const glaubers = Person.cursor().filter({"first_name": "Glauber"});
    const rows = glaubers.select("first_name", "last_name");
    for await (let row of rows) {
        ret += "(" + row.first_name + " " + row.last_name + ") ";
    }
    return new Response(ret + "]");
}
EOF

cd "$TEMPDIR"
$CHISEL apply

# CHECK: Model defined: Person
# CHECK: End point defined: /dev/query
# CHECK: End point defined: /dev/store
# CHECK: Policy defined for label pii

$CURL --data '{
    "first_name":"Glauber",
    "last_name":"Costa",
    "age": 666,
    "human": true,
    "height": 10.01
}' -o - $CHISELD_HOST/dev/store

# CHECK: ok

$CURL --data '{
    "first_name":"Jan",
    "last_name":"Plhak",
    "age": -666,
    "human": true,
    "height": 10.02
}' -o - $CHISELD_HOST/dev/store

# CHECK: ok

$CURL -o - $CHISELD_HOST/dev/query
# CHECK: HTTP/1.1 200 OK
# CHECK: [(Glauber xxxxx) ]
