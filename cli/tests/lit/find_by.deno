# RUN: sh -e @file

cp examples/person.ts "$TEMPDIR/models"
cp examples/store.ts "$TEMPDIR/endpoints/ins.ts"
cp examples/find_by.ts "$TEMPDIR/endpoints"

cd "$TEMPDIR"
$CHISEL apply

# CHECK: Model defined: Person
# CHECK: End point defined: /dev/find_by
# CHECK: End point defined: /dev/ins

$CURL --data '{
    "first_name":"Glauber", 
    "last_name":"Costa", 
    "age": 666, 
    "human": true, 
    "height": 10.01
}' -o - $CHISELD_HOST/dev/ins

$CURL --data '{
    "first_name":"Jan", 
    "last_name":"Plhak", 
    "age": -666, 
    "human": true, 
    "height": 10.02
}' -o - $CHISELD_HOST/dev/ins

# CHECK: ok

$CURL --data '{
    "field_name":"first_name",
    "value":"Jan"
}' -o - $CHISELD_HOST/dev/find_by

# CHECK: HTTP/1.1 200 OK
# CHECK: Jan Plhak -666 true 10.02

$CURL --data '{
    "field_name":"last_name",
    "value":"Costa"
}' -o - $CHISELD_HOST/dev/find_by

# CHECK: HTTP/1.1 200 OK
# CHECK: Glauber Costa 666 true 10.01

$CURL --data '{
    "field_name":"last_name",
    "value":"bagr"
}' -o - $CHISELD_HOST/dev/find_by

# CHECK: HTTP/1.1 200 OK
# CHECK: 

$CURL --data '{
    "field_name":"age",
    "value":-666
}' -o - $CHISELD_HOST/dev/find_by

# CHECK: HTTP/1.1 200 OK
# CHECK: Jan Plhak -666 true 10.02

$CURL --data '{
    "field_name":"human",
    "value":true
}' -o - $CHISELD_HOST/dev/find_by

# CHECK: HTTP/1.1 200 OK
# CHECK: Glauber Costa 666 true 10.01 Jan Plhak -666 true 10.02

$CURL --data '{
    "field_name":"height",
    "value":10.01
}' -o - $CHISELD_HOST/dev/find_by

# CHECK: HTTP/1.1 200 OK
# CHECK: Glauber Costa 666 true 10.01

## undefined value, means no filtering
$CURL --data '{
    "field_name":"height"
}' -o - $CHISELD_HOST/dev/find_by
# CHECK: HTTP/1.1 200 OK
# CHECK: Glauber Costa 666 true 10.01 Jan Plhak -666 true 10.02

$CURL --data '{
    "field_name":"misspelled_field_name",
    "value":10.01
}' -o - $CHISELD_HOST/dev/find_by

# CHECK: HTTP/1.1 500 Internal Server Error
# CHECK Uncaught Error: trying to filter by non-existent field `foo` misspelled_field_name
