# RUN: sh -e @file

cat << EOF > "$TEMPDIR/endpoints/foo.js"
export default async function chisel(req) {
    return new Response("foo with url " + req.url + "\n");
}
EOF

cd "$TEMPDIR"
$CHISEL apply

# CHECK: End point defined: /foo

cat << EOF | $CHISEL end-point create foo/bar -
export default async function chisel(req) {
    return new Response("foo/bar with url " + req.url + "\n");
}
EOF

# CHECK: End point defined: /foo/bar

$CURL -o - $CHISELD_HOST/foo

# CHECK: HTTP/1.1 200 OK
# CHECK: foo with url http://chiselstrike.com/foo

$CURL -o - $CHISELD_HOST/foo/bar

# CHECK: HTTP/1.1 200 OK
# CHECK: foo/bar with url http://chiselstrike.com/foo/bar

$CURL -o - $CHISELD_HOST/foo/zed

# CHECK: HTTP/1.1 200 OK
# CHECK: foo with url http://chiselstrike.com/foo/zed
