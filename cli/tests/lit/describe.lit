# RUN: sh -e @file

cd "$TEMPDIR"

cat << EOF > "$TEMPDIR/types/types.ts"
class Foo { a: string; }
class Bar { b: string; }
EOF

cat << EOF > "$TEMPDIR/endpoints/hello.ts"
export default async function chisel(req: Request) {
    return new Response('ok');
}
EOF

cat << EOF > "$TEMPDIR/policies/policies.yml"
labels:
  - name: pii
    transform: anonymize
EOF

$CHISEL apply

# CHECK: Type defined: Foo
# CHECK: Type defined: Bar
# CHECK: End point defined: /dev/hello

$CHISEL describe

# CHECK: class Bar {
# CHECK:   [[^ *b: string]]
# CHECK: }
# CHECK: class Foo {
# CHECK:   [[^ *a: string]]
# CHECK: }
# CHECK: Endpoint: /dev/hello
# CHECK: Label policy: pii
