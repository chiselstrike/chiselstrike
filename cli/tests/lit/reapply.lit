# RUN: sh -e @file

cat << EOF > "$TEMPDIR/types/foo.ts"
class Foo {
  @L1 a: string;
  @L2 b: number;
}
EOF

cd "$TEMPDIR"
$CHISEL apply
# CHECK: Type defined: Foo

## Identical definition is OK.
$CHISEL apply
# CHECK: Type defined: Foo

## Changing labels is OK.
cat << EOF > "$TEMPDIR/types/foo.ts"
class Foo {
  a: string;
  @L1 b: number;
}
EOF
$CHISEL apply
# CHECK: Type defined: Foo

# Adding default values is OK.
cat << EOF > "$TEMPDIR/types/foo.ts"
class Foo {
  a: string = "foo";
  @L1 b: number;
}
EOF
$CHISEL apply
# CHECK: Type defined: Foo

## Two compatible definitions in different files are rejected.
cat << EOF > "$TEMPDIR/types/fooNoteADifferentFilenameHere.ts"
class Foo {
  a: string = "foo";
  b: number;
}
EOF
$CHISEL apply 2>&1 || echo
# CHECK: Error: Type Foo defined twice
rm "$TEMPDIR/types/fooNoteADifferentFilenameHere.ts"

## Changing b's type is not OK.
cat << EOF > "$TEMPDIR/types/foo.ts"
class Foo {
  a: string = "foo";
  b: string;
}
EOF
$CHISEL apply 2>&1 || echo # (swallow the apply abort)
# CHECK: unsafe to replace type: Foo

## Adding a field is not OK.
cat << EOF > "$TEMPDIR/types/foo.ts"
class Foo {
  a: string = "foo";
  b: number; 
  c: bigint; 
}
EOF
$CHISEL apply 2>&1 || echo # (swallow the apply abort)
# CHECK: unsafe to replace type: Foo

## Reordering fields is OK.
cat << EOF > "$TEMPDIR/types/foo.ts"
class Foo {
  b: number;
  a: string = "foo";
}
EOF
$CHISEL apply 2>&1 || echo # (swallow the apply abort)
# CHECK: Type defined: Foo

## Removing fields is OK if they previously had a default
cat << EOF > "$TEMPDIR/types/foo.ts"
class Foo {
  b: number;
}
EOF
$CHISEL apply 2>&1 || echo # (swallow the apply abort)
# CHECK: Type defined: Foo

## Redefining elemental types is not OK.
echo 'class number { a: number}' > "$TEMPDIR/types/foo.ts"
$CHISEL apply --allow-type-deletion 2>&1 || echo # (swallow the apply abort)
# CHECK: custom type expected, got `number` instead

### Removing fields is not OK if they didn't have a default
cat << EOF > "$TEMPDIR/types/foo.ts"
class Bar {
  a: number;
  b: number;
}
EOF
$CHISEL apply --allow-type-deletion 2>&1 || echo # (swallow the apply abort)
# CHECK: Type defined: Bar
#
cat << EOF > "$TEMPDIR/types/foo.ts"
class Bar {
  b: number;
}
EOF
$CHISEL apply 2>&1 || echo # (swallow the apply abort)
# CHECK: unsafe to replace type: Bar

