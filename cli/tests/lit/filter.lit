# RUN: sh -e @file

cp examples/person.ts "$TEMPDIR/types"
cp examples/store.js "$TEMPDIR/endpoints"

cat << EOF > "$TEMPDIR/endpoints/query.js"
export default async function chisel(req: Request) {
    let ret = "";
    const filtered = Chisel.collections.Person.filter({"last_name":  "Costa",
                                                       "first_name": "Glauber",
                                                       "age":        666});
    const rows = await filtered.rows();
    for await (let row of rows) {
        ret += row.first_name + " " + row.last_name + "\n";
    }
    return new Response(ret);
}
EOF

cd "$TEMPDIR"
$CHISEL apply

# CHECK: Type defined: Person
# CHECK: End point defined: /query
# CHECK: End point defined: /store

$CURL --data '{
    "first_name":"Glauber",
    "last_name":"Costa",
    "age": 666,
    "human": true,
    "height": 10.01
}' -o - $CHISELD_HOST/store

# CHECK: ok

$CURL -o - $CHISELD_HOST/query

# CHECK: HTTP/1.1 200 OK
# CHECK: Glauber Costa
