# RUN: CURL="@curl" sh -e @file

$CHISEL type import examples/person.graphql

# CHECK: Type defined: Person

$CHISEL end-point create ins examples/store.js

# CHECK: End point defined: /ins

$CURL --data '{
    "first_name":"hello", 
    "last_name":"world", 
    "age": 2147483647, 
    "human": false, 
    "height": 12742333
}' -o - $CHISELD_HOST/ins

# CHECK: ok

$CHISEL end-point create find examples/find.js

# CHECK: End point defined: /find

$CURL -o - $CHISELD_HOST/find

# CHECK: HTTP/1.1 200 OK
# CHECK: hello world 2147483647 false 12742333

cat << EOF | $CHISEL policy update -
labels:
  - name: pii
    transform: anonymize
EOF

$CURL -o - $CHISELD_HOST/find

# CHECK: HTTP/1.1 200 OK
# CHECK: hello xxxxx

cat << EOF | $CHISEL type import -
type Person {
  first_name: String @L1 @L2 @L3
  last_name: String @pii @L2
  age: Int @L1
  human: Boolean @L1 @L3
  height: Float
}
EOF

cat << EOF | $CHISEL policy update -
labels:
  - name: Linf
    transform: anonymize
  - name: L1
  - name: L2
    transform: anonymize
EOF

$CURL -o - $CHISELD_HOST/find

# CHECK: HTTP/1.1 200 OK
# CHECK: xxxxx xxxxx

cat << EOF | $CHISEL policy update -
labels:
  - name: L2
    transform: anonymize
    except_uri: find
EOF

$CURL -o - $CHISELD_HOST/find
# CHECK: HTTP/1.1 200 OK
# CHECK: hello world

cat << EOF | $CHISEL policy update -
labels:
  - name: L2
    transform: anonymize
    except_uri: d$
EOF

$CURL -o - $CHISELD_HOST/find
# CHECK: HTTP/1.1 200 OK
# CHECK: hello world

cat << EOF | $CHISEL policy update -
labels:
  - name: L2
    transform: anonymize
    except_uri: ^no_match
EOF

$CURL -o - $CHISELD_HOST/find
# CHECK: HTTP/1.1 200 OK
# CHECK: xxxxx xxxxx
