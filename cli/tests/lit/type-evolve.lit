# RUN: sh -e @file

cd "$TEMPDIR"
cat << EOF > "$TEMPDIR/types/types.ts"
import { ChiselEntity } from "@chiselstrike/chiselstrike";

export class Evolving extends ChiselEntity {
    a: string;
    constructor(a: string) {
        super();
        this.a = a;
    }
}
EOF
$CHISEL apply
# CHECK: Type defined: Evolving

cat << EOF > "$TEMPDIR/types/types.ts"
import { ChiselEntity } from "@chiselstrike/chiselstrike";

export class Evolving extends ChiselEntity {
    a: string; b: string = "with_default";
    constructor(a: string) {
        super();
        this.a = a;
    }
}
EOF
$CHISEL apply
# CHECK: Type defined: Evolving

cat << EOF > "$TEMPDIR/endpoints/store.ts"
export default async function chisel(req: Request) {
   const obj = new Evolving("A");
   obj.b = "B";
   await obj.save();
   return new Response('ok');
}
EOF

cat << EOF > "$TEMPDIR/endpoints/find.ts"
export default async function chisel(req: Request) {
   let response = "tst ";
   for await (let ev of Evolving.all()) {
        let fields = [ev.a, ev.b];
        response += fields.join(" ");
        response += " ";
   }
   response += "tst";
   return new Response(response);
}
EOF

$CHISEL apply
# CHECK: Type defined: Evolving
# CHECK: End point defined: /dev/find
# CHECK: End point defined: /dev/store

$CURL -X POST $CHISELD_HOST/dev/store
# CHECK: HTTP/1.1 200 OK

$CHISEL restart

$CURL $CHISELD_HOST/dev/find
# CHECK: HTTP/1.1 200 OK
# CHECK: tst A B tst

cat << EOF > "$TEMPDIR/types/types.ts"
import { ChiselEntity } from "@chiselstrike/chiselstrike";

export class Evolving extends ChiselEntity {
    a: string;

    constructor(a: string) {
        super();
        this.a = a;
    }
}
EOF
$CHISEL apply
# CHECK: Type defined: Evolving

$CURL $CHISELD_HOST/dev/find
# CHECK: HTTP/1.1 200 OK
# CHECK: tst A  tst
