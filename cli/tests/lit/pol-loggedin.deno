$CURL $CHISELD_HOST/find
# CHECK: HTTP/1.1 404 Not Found

$CURL $CHISELD_HOST/dev/find
# CHECK: HTTP/1.1 403 Forbidden
$CHISEL restart

$CURL $CHISELD_HOST/dev/find
# CHECK: HTTP/1.1 403 Forbidden

$CURL -H "ChiselStrikeToken:$token_al" $CHISELD_HOST/dev/find
