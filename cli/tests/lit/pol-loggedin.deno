cp examples/find.js "$TEMPDIR/endpoints/a/b/c/findc1.js"
cp examples/find.js "$TEMPDIR/endpoints/a/b/c/findc2.js"
cat << EOF > "$TEMPDIR/policies/pol.yaml"
endpoints:
  - path: /find
    users: .*
  - path: /a/b/c/findc1
