# CHECK:     "url": "http://chiselstrike.com/echo",
# CHECK:     "headers": {
# CHECK:         "accept": "*/*",
# CHECK:         "content-length": "6",
# CHECK:         "content-type": "application/x-www-form-urlencoded",
# CHECK:         "expect": "100-continue",
