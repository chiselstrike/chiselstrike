# RUN: sh -e @file

cp examples/person.ts "$TEMPDIR/models"

cd "$TEMPDIR"

cat << EOF > "$TEMPDIR/endpoints/store.ts"
export default async function chisel(req: Request) {
    const glauber = new Person();
    glauber.first_name = "Glauber";
    glauber.last_name = "Costa";
    await glauber.save();

    const pekka = new Person();
    pekka.first_name = "Pekka";
    pekka.last_name = "Enberg";
    await pekka.save();

    return new Response("Ok");
}
EOF

cat << EOF > "$TEMPDIR/endpoints/toarray.ts"
export default async function chisel(req: Request) {
    let people = await Person.select("first_name").toArray()
    return new Response(JSON.stringify(people));
}
EOF

$CHISEL apply
# CHECK: Type defined: Person
# CHECK: End point defined: /dev/store
# CHECK: End point defined: /dev/toarray

$CURL -X POST $CHISELD_HOST/dev/store
# CHECK: Ok

$CURL $CHISELD_HOST/dev/toarray
# CHECK: [{"first_name":"Glauber"},{"first_name":"Pekka"}]
