# RUN: sh -e @file

cp examples/person.ts "$TEMPDIR/models"
cp examples/store.js "$TEMPDIR/endpoints"

cat << EOF > "$TEMPDIR/endpoints/query.ts"
import { Person } from "../models/person.ts";

export default async function (req: Request) {
    const people = await Person.findMany({});
    return new Response("Found " + people.length + " people.");
}
EOF

cd "$TEMPDIR"

$CHISEL apply

# CHECK: Model defined: Person
# CHECK: End point defined: /dev/store

NUM=100
for i in $(seq 1 $NUM); do
  $CURL --data '{
      "first_name":"Glauber",
      "last_name":"Costa",
      "age": 666,
      "human": true,
      "height": 10.01
  }' -o - $CHISELD_HOST/dev/store > log.$i 2>&1 &
done

# CHECK: ok

wait

for i in $(seq 1 $NUM); do
    cat log.$i
done

$CURL -o - $CHISELD_HOST/dev/query

# CHECK: Found 100 people.
