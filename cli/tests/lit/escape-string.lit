# RUN: sh -e @file

cp examples/person.ts "$TEMPDIR/types"
cp examples/store.js "$TEMPDIR/endpoints"

cat << EOF > "$TEMPDIR/endpoints/query.ts"
export default async function chisel(req: Request) {
    const filtered = Chisel.Person.findMany({first_name: "Bob'"});
    let ret = "";
    for await (let row of filtered) {
        ret += row.first_name + " " + row.last_name + "\n";
    }
    return new Response(ret);
}
EOF

cd "$TEMPDIR"
$CHISEL apply

# CHECK: Type defined: Person
# CHECK: End point defined: /dev/query
# CHECK: End point defined: /dev/store

$CURL --data '{
    "first_name":"Bob'\''",
    "last_name":"Tables",
    "age": 666,
    "human": true,
    "height": 10.01
}' -o - $CHISELD_HOST/dev/store

# CHECK: ok

$CURL -o - $CHISELD_HOST/dev/query

# CHECK:  Bob' Tables
